<%if flash[:notice] %>
  <p id="notice">
      <%= flash[:notice] %>
  </p>
<% end %>

<h2>User info</h2>


<h2>New book</h2>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生した。
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>

<h2>Book detail</h2>

<table>
  <tbody>
    <tr>
      <td><%= image_tag @books.user.get_profile_image('50x50') %></td>
      <td><%= @books.user_id %></td>
      <td><%= @books.title %></td>
      <td><%= @books.body %></td>
      <td><%= link_to 'Edit', edit_book_path %></td>
      <td><%= link_to 'Destroy' %></td>
    </tr>
  </tbody>
</table>