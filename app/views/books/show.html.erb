<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生した。
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<h2>User info</h2>
 <%= image_tag @user.get_profile_image('50x50') %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction%></td>
    </tr>
  </tbody>
</table>

<!--部分テンプレート新規投稿-->
<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>


<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @books.user.get_profile_image('50x50') %></td>
      <td><%= link_to @books.user_id, user_path(@user) %></td>
      <td><%= link_to @books.title, books_path %></td>
      <td><%= @books.body %></td>
      <% if @books.user == current_user %>
      <td><%= link_to 'Edit', edit_book_path(@books) %></td>
      <td><%= link_to 'Destroy', books_path(@books), method: :destroy, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>