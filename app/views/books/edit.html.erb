<h1>Editing Book</h1>
<% if @books.errors.any? %>
  <%= @books.errors.count %>件のエラーが発生しました
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @books, method: :patch, local:true do |f| %>
<label>Title</label>
<% f.text_field :title %>

<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<% end %>

<span>
<%=link_to 'Show', book_path %>
</span>
|
<span>
<%=link_to 'Back', books_path %>
</span>
