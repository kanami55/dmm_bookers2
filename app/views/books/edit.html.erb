<h1>Editing Book</h1>

<%= form_with model: @books, method: :patch, local:true do |f| %>
<label>Title</label>
<% f.text_field :title %>

<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<% end %>

