<div class="container">
  <div class="px-5 text-danger">
    <% if new_book.errors.any? %>
      <%= new_book.errors.count %>件のエラーが発生しました
  <ul>
      <% new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <%= image_tag user.get_profile_image('50x50') %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <td>name</td>
              <td><%= user.name %></td>
            </tr>
            <tr>
              <td>introduction</td>
              <td><%= user.introduction%></td>
            </tr>
          </tbody>
        </table>

    <div class="row">
      <%= link_to '●', edit_user_path(user.id) %>
    </div>
    </div>

    <h2 class="mt-3 mb-1">New book</h2>

    <form>
      <%= form_with model: new_book, local:true do |f| %>
        <div class="form-group mb-2">
        <label class="mb-1">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group mb-2">
        <label class="mb-1">Opinion</label>
          <%= f.text_area :body class: "form-control" %>
        </div>
        <div class="form-group mb-2">
        <button class="btn btn-success">
        <%= f.submit 'Create Book' class: "text-white" %>
        </button>
        </div>
      <% end %>
    </form>
    </div>
  </div>
</div>





