<% if new_book.errors.any? %>
  <%= new_book.errors.count %>件のエラーが発生しました
  <ul>
    <% new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h2>User info</h2>
 <%= image_tag user.get_profile_image('50x50') %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction%></td>
    </tr>
  </tbody>
</table>

<div class="row">
<%= link_to '●', edit_user_path(user.id) %>
</div>

<h2>New book</h2>
<%= form_with model: new_book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>