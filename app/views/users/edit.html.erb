<h2>User info</h2>
<% if @user.errors.any? %>
<%= @user.errors.count %>件のエラーが発生した。
<ul>
<%= @user.errors.full_messages.each do |message| %>
　<li><%= message %></li>
<% end %>
</ul>
<% end %>

<%= form_with model: @user, method: :patch, local:true do |f| %>
<label>Name</label>
<%= f.text_field :name %>
<label>Image</label>
<label>Introduction</label>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' %>

<% end %>
