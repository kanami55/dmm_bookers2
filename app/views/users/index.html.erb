<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生した。
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<h2>User info</h2>
 <%= image_tag @user.get_profile_image('50x50') %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction%></td>
    </tr>
  </tbody>
</table>


<!--部分テンプレート新規投稿-->
<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>


<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image('50x50') %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
