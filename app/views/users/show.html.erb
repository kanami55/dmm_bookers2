<h2>User info</h2>
<%= image_tag @user.get_profile_image(10*10) %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction%></td>
    </tr>
  </tbody>
</table>

<div class="row">
<%=link_to'●', edit_user_path %>
</div>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book', book_path()%>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
