<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生した。
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<h2>User info</h2>
 <%= image_tag @users.get_profile_image('50x50') %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <td>name</td>
      <td><%= @users.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @users.introduction%></td>
    </tr>
  </tbody>
</table>

<div class="row">
<%=link_to '●', edit_user_path %>
</div>

<!--部分テンプレート新規投稿-->
<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image('50*50') %></td>
      <td><%= link_to book.title, book_path(book.id)  %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
